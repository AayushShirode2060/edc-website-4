<html lang="en">
    <%- include("./partials/head1.ejs") %>
    
    <body>
    
      <div class="topics content">
        <h2>All Topics</h2>
    
        <% if (topics.length > 0) { %>
          <% topics.forEach(topic => { %>
            <a class="single" href="/topics/<%= topic._id%>">
              
              <h3 class="title"><%= topic.title %><p style="text-align-last: right; font-size: smaller;"><%= topic.createdAt.toDateString() %></p></h3>
              <p class="snippet"><%= topic.snippet %></p>
            </a>
          <% }) %>
        <% } else { %>
          <p>There are no topics to display...</p>
        <% } %>
        
      </div>
    
      <%- include("./partials/footer.ejs") %>
    </body>
</html>